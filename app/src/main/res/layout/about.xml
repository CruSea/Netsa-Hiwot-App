<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"

     >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ነፃ ህይወት"
        android:textColor="#ff6600"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/netsahiwot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff6600"
        android:text="@string/About"
        android:layout_below="@id/netsahiwot"
        android:layout_marginTop="10dp"
        android:id="@+id/about_us"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/more"
        android:layout_below="@+id/about_us"
        />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_below="@+id/more"
       android:layout_marginTop="50dp">
       <ImageButton
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:id="@+id/facebookbutton"
           android:background="@drawable/facebook">
       </ImageButton>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="www.facebook.com/netsahiwot"
    android:layout_marginTop="20dp"
    android:paddingLeft="10dp"
    android:id="@+id/facebooklink"
    />
   </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/more"
    android:layout_marginTop="120dp"
    >
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/websitebutton"
        android:background="@drawable/ic_launcher"
        >
    </ImageButton>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/websitelink"
        android:text="http://netsahiwot.com/"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        />

</LinearLayout>

</RelativeLayout>